{% extends 'base.html.twig' %}

{% block title %}Jobiz - Find your dream job{% endblock %}

{% block body %}
<section class="text-white bg-slate-700 body-font">
  <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
    <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-white">
        Find your next opportunity with Jobiz
      </h1>
      <p class="mb-8 leading-relaxed">
        Discover thousands of job offers from top companies. Apply with one click and start your career today!
      </p>
      <div class="flex justify-center">
        <a class="inline-flex text-white bg-teal-600 border-0 py-2 px-6 focus:outline-none hover:bg-teal-500 rounded text-lg" href="/jobs">
          View all jobs
        </a>
      </div>
    </div>
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <img class="object-cover object-center rounded" src="{{ asset('logo-jobiz.webp') }}" alt="Jobiz">
    </div>
  </div>
</section>
{% endblock %}
