{% extends 'base.html.twig' %}

{% block title %}Liste des offres{% endblock %}

{% block body %}
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Liste des offres</h1>

    <div class="mb-12 text-center">
      <strong class="text-gray-700 mr-4">Cat√©gories :</strong>
      <div class="flex flex-wrap justify-center gap-4 mt-4">
        {% for cat in categories %}
        <a href="{{ path('job_list', { category: cat.id }) }}"
           class="bg-teal-600 hover:bg-teal-800 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
          {{ cat.name }}
        </a>
        {% endfor %}
      </div>
    </div>

    <div class="flex flex-wrap -m-4">
      {% for job in jobs %}
      <div class="p-4 lg:w-1/3">
        <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-12 pb-16 rounded-lg overflow-hidden text-center relative">
          <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">OFFRE</h2>
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">
            {{ job.title }}
          </h1>
          <p class="leading-relaxed mb-3">{{ job.city }}</p>
          <a href="{{ path('job_detail', { id: job.id }) }}" class="text-teal-600 inline-flex items-center">Voir plus
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none"
              stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
      {% else %}
      <p class="text-center text-gray-700 w-full">Aucune offre pour le moment.</p>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
