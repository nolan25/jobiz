<h1>Liste des offres</h1>

<div>
    <strong>Cat√©gories :</strong>
    {% for cat in categories %}
    <a href="{{ path('job_list', { category: cat.id }) }}">
        {{ cat.name }}
    </a>
    {% endfor %}
</div>

<hr />

<ul>
    {% for job in jobs %}
    <li>
        <a href="{{ path('job_detail', { id: job.id }) }}">
            {{ job.title }} - {{ job.city }}
        </a>
    </li>
    {% else %}
    <li>Aucune offre pour le moment.</li>
    {% endfor %}
</ul>
