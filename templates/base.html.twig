<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome! {% endblock %}</title>
        <link
            rel="icon"
            href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>‚ö´Ô∏è</text><text y='1.3em' x='0.2em' font-size='76' fill='%23fff'>sf</text></svg>"
        />
        {% block stylesheets %}{% endblock %} {% block javascripts %} {% block
        importmap %}
        {{
            importmap("app")
        }}
        {% endblock %} {% endblock %}
    </head>

    <body class="min-h-screen flex flex-col bg-slate-700 text-white">
        <!-- Header -->
        <header class="bg-slate-800 body-font">
            <div
                class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center"
            >
                <a
                    href="#"
                    class="flex title-font font-medium items-center text-white mb-4 md:mb-0"
                >
                    <img
                        src="{{ asset('logo-jobiz.webp') }}"
                        alt="Jobiz"
                        width="120"
                    />
                </a>
                <nav
                    class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center"
                >
                    <a href="/" class="mr-5 text-teal-600 hover:text-teal-400"
                        >Home</a
                    >
                    <a
                        href="/jobs"
                        class="mr-5 text-teal-600 hover:text-teal-400"
                        >Jobs</a
                    >
                    <a
                        href="/about"
                        class="mr-5 text-teal-600 hover:text-teal-400"
                        >About</a
                    >
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}">üîí Admin</a>
                    {% endif %}
                </nav>
                <a
                    href="/login"
                    class="inline-flex items-center bg-slate-800 border border-teal-600 text-teal-600 py-2 px-3 ml-10 focus:outline-none hover:bg-teal-600 hover:text-white rounded text-base mt-4 md:mt-0"
                >
                    Login
                </a>
            </div>
        </header>

        <!-- Main content -->
        <main class="flex-grow">{% block body %}{% endblock %}</main>

        <!-- Footer -->
        <footer class="mt-auto bg-slate-800 body-font">
            <div
                class="container px-5 py-8 mx-auto flex items-center sm:flex-row flex-col"
            >
                <a
                    href="#"
                    class="flex title-font font-medium items-center md:justify-start justify-center text-white"
                >
                    <img
                        src="{{ asset('logo-jobiz.webp') }}"
                        alt="Jobiz"
                        width="70"
                    />
                </a>
                <p
                    class="text-sm text-white sm:ml-4 sm:pl-4 sm:border-l-2 sm:border-teal-600 sm:py-2 sm:mt-0 mt-4"
                >
                    ¬©
                    {{ 'now' | date('Y') }}
                    Jobiz
                </p>
                <span
                    class="inline-flex sm:ml-auto sm:mt-0 mt-4 justify-center sm:justify-start"
                >
                    <!-- Facebook -->
                    <a class="text-teal-600 hover:text-teal-400">
                        <svg
                            fill="currentColor"
                            class="w-5 h-5"
                            viewbox="0 0 24 24"
                        >
                            <path
                                d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
                            />
                        </svg>
                    </a>
                    <!-- Twitter -->
                    <a class="ml-3 text-teal-600 hover:text-teal-400">
                        <svg
                            fill="currentColor"
                            class="w-5 h-5"
                            viewbox="0 0 24 24"
                        >
                            <path
                                d="M23 3a10.9 10.9 0 01-3.14 1.53A4.48 4.48 0 0012 8v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
                            />
                        </svg>
                    </a>
                    <!-- Instagram -->
                    <a class="ml-3 text-teal-600 hover:text-teal-400">
                        <svg
                            fill="none"
                            stroke="currentColor"
                            class="w-5 h-5"
                            viewbox="0 0 24 24"
                        >
                            <rect
                                width="20"
                                height="20"
                                x="2"
                                y="2"
                                rx="5"
                                ry="5"
                            />
                            <path
                                d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"
                            />
                            <circle cx="18.5" cy="5.5" r="1" />
                        </svg>
                    </a>
                    <!-- LinkedIn -->
                    <a class="ml-3 text-teal-600 hover:text-teal-400">
                        <svg
                            fill="currentColor"
                            class="w-5 h-5"
                            viewbox="0 0 24 24"
                        >
                            <path
                                d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
                            />
                            <circle cx="4" cy="4" r="2" />
                        </svg>
                    </a>
                </span>
            </div>
        </footer>
    </body>
</html>
